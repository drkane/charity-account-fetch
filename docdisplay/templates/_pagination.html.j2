<nav class="f5 mt4">
    {% if nav.first %}
    <a href="{{nav.first}}" class="link blue underline-hover pr3">&laquo; First</a>
    {% endif %}
    {% if nav.prev %}
    <a href="{{nav.prev}}" class="link blue underline-hover pr3">&lsaquo; Prev</a>
    {% endif %}
    <span class="f5 pr3">Page {{nav.current_page}} of {{nav.last_page}}</span>
    {% if nav.next %}
    <a href="{{nav.next}}" class="link blue underline-hover pr3">Next &rsaquo;</a>
    {% endif %}
    {% if nav.last %}
    <a href="{{nav.last}}" class="link blue underline-hover pr3">Last &raquo;</a>
    {% endif %}
</nav>